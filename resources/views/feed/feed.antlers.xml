{{ xml_header }}
<rss version="2.0">
   <channel>
      <title>{{ config:app:name }} Journal</title>
      <link>{{ site:url }}</link>
      <description>Readeable bites about web development.</description>
      <language>en-us</language>
      <lastBuildDate>{{ now iso_format="ddd, DD MMM GGGG HH:mm:ss UTC" }}</lastBuildDate>
      <webMaster>info@1902.studio</webMaster>
      {{ collection:journal sort="date:desc" limit="50" }}
        <item>
            <title>{{ title }}</title>
            <link>{{ permalink }}</link>
            <description>{{ description }}</description>
            <pubDate>{{ date iso_format="ddd, DD MMM GGGG hh:mm:ss UTC" }}</pubDate>
        </item>
      {{ /collection:journal }}
   </channel>
</rss>
